---
import BaseLayout from '../layouts/Base.astro';
import PostPreview from "@/components/blog/PostPreviewB";
import SocialMediaLinks from "@/components/SocialMediaLinks";
import { getAllPosts, sortMDByDate, sortMDByPinned } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
const allPostsByPinned = sortMDByPinned(allPostsByDate);

const tech: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "Astro",
		desc: "Build fast websites, faster.",
		href: "https://astro.build",
	},
	{
		title: "Astro Assets",
		desc: "Built-in optimized asset support.",
		href: "https://docs.astro.build/en/guides/assets/",
	},
	{
		title: "Tailwind CSS",
		desc: "Rapidly build modern websites without ever leaving your HTML.",
		href: "https://tailwindcss.com",
	},
	{
		title: "Markdown",
		desc: "Simple and easy-to-use markup language.",
		href: "https://www.markdownguide.org/",
	},
	{
		title: "MDX",
		desc: "Markdown for the component era.",
		href: "https://mdxjs.com/",
	},
	{
		title: "Astro Icon",
		desc: "An easy to use Icon component for Astro.",
		href: "https://github.com/natemoo-re/astro-icon#readme",
	},
];

---

<BaseLayout title="Cave">
	<section>
		<h1 class="title">Yo!! Welcome :> </h1>
		<p class="mb-4 sm:mb-8">
      Hi there! Welcome to my lil cave. Please grab a seat and enjoy a cup of coffee(or tea). I'm Yiyuan Li, a computer science student
      currently jamming with Rust and cracking the code on data structures and algorithms with C++. 
      Also dabbling in some computer graphics.
		</p>
		<p class="mb-4 sm:mb-8">
     I'll be sharing some of my recent projects and tech-related topics here,
    I usually share updates about a project I'm working on here, as well as some study notes.
    Of course, there will also be content about films or my life in general.
		</p>

		<p class="mb-4 sm:mb-8">
		<a href="/YiyuanLi_CV.pdf">Im Currently looking for job as backend developer, you can find my CV by click Here</a>
	    </p>
		<div>
			<span>Hit me up:</span>
			<SocialMediaLinks/>
		</div>
	</section>

	<section class="mt-8 sm:mt-16">
		<h2 class="title">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{allPostsByPinned.map(p => <PostPreview post={p}/>)}
		</ul>
	</section>

  <!--
	<section class="mt-16">
			<h2 class="title">Technologies</h2>
			<ul class="space-y-4 sm:space-y-2">
				{
					tech.map(({ href, title, desc }) => (
						<li>
							<a
								href={href}
								target="_blank"
								rel="noopener noreferrer"
								class="cody-link inline-block"
							>
								{title}
							</a>: 
							<p class="inline-block sm:mt-2">{desc}</p>
						</li>
					))
				}
			</ul>
		</section>
  -->
</BaseLayout>
